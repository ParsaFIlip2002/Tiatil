<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10"
          xmlns="http://javafx.com/javafx/10.0.2-internal"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="sample.Controller">
    <children>
        <BorderPane prefHeight="200.0" prefWidth="200.0">
            <center>
                <Canvas fx:id="_canvas" height="240.0" width="365.0" />
            </center>
            <left>
                <ColorPicker fx:id="_colorPicker" prefHeight="30.0" prefWidth="30.0" />
            </left>
            <bottom>
                <Button mnemonicParsing="false" onAction="#onExitClick" text="Exit" BorderPane.alignment="CENTER" />
            </bottom>
        </BorderPane>
    </children>
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
</GridPane>